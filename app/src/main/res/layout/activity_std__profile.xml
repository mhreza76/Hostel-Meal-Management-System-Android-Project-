<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Back"
    tools:context=".Std_Profile">

    <ImageView
        android:id="@+id/img"
        android:layout_width="130dp"
        android:layout_height="180dp"
        android:background="@mipmap/baiust_foreground" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/welcome"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="50dp"
        android:text="Welcome to BAIUST Hostel Profile Page"
        android:textColor="#9C27B0"
        android:textSize="13pt"
        android:layout_alignLeft="@+id/img"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/uid"
        android:text="User ID"
        android:textSize="12pt"
        android:textStyle="bold"
        android:layout_alignBottom="@id/welcome"
        android:layout_marginBottom="-80dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/name"
        android:text="Name"
        android:textSize="12pt"
        android:textStyle="bold"
        android:layout_alignBottom="@id/uid"
        android:layout_marginBottom="-80dp"
        />

    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/phn"
    android:text="Phone"
    android:textSize="12pt"
    android:textStyle="bold"
    android:layout_alignBottom="@id/name"
    android:layout_marginBottom="-80dp"
    />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bill"
        android:text="Current Month Bill:"
        android:textSize="12pt"
        android:textStyle="bold"
        android:layout_alignBottom="@id/phn"
        android:layout_marginBottom="-80dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/billvalue"
        android:text=""
        android:textSize="12pt"
        android:textStyle="bold"
        android:layout_alignBottom="@id/phn"
        android:layout_marginLeft="250dp"
        android:layout_marginBottom="-80dp"
        />

</RelativeLayout>